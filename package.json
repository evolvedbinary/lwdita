{
  "name": "@evolvedbinary/lwdita",
  "version": "0.2.4",
  "description": "Tools and libraries for working with LwDITA",
  "engines": {
    "node": ">=20.1.0 <21",
    "yarn": ">=1.22.21 <2"
  },
  "private": true,
  "workspaces": [
    "packages/lwdita-xdita",
    "packages/lwdita-ast"
  ],
  "scripts": {
    "lint": "eslint packages/* --ext .ts",
    "lint:fix": "eslint packages/* --ext .ts --fix",
    "start:dev": "nodemon",
    "clean": "rimraf ./dist packages/lwdita-xdita/dist packages/lwdita-ast/dist",
    "copy": "yarn copy-xml && yarn copy-ast",
    "build": "yarn clean && yarn workspace @evolvedbinary/lwdita-xdita build && yarn workspace @evolvedbinary/lwdita-ast build",
    "example": "yarn workspace @evolvedbinary/lwdita-xdita example",
    "test": "mocha",
    "test:watch": "mocha -w",
    "coverage": "rimraf coverage && nyc yarn mocha",
    "coveralls": "nyc --reporter=text-lcov report | coveralls",
    "generate-docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolvedbinary/lwdita.git"
  },
  "keywords": [
    "LwDITA",
    "DITA",
    "XML",
    "JSON"
  ],
  "author": "Evolved Binary",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/evolvedbinary/lwdita/issues"
  },
  "homepage": "https://github.com/evolvedbinary/lwdita#readme",
  "directories": {
    "src": "./src",
    "test": "./test"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.6",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "chai": "^4.3.10",
    "coveralls": "^3.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "npm-release": "^1.0.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "5.4.5"
  }
}
